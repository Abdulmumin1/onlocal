{
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "onlocal",
          "cmd": "onlocal",
          "args": [{ "validator": "\\d+" }],
          "sidecar": false
        }
      ]
    },
    "shell:allow-kill"
  ]
}
